# FinFlow Tracker Development Environment Variables Template
# Copy this file to .env.local for local development

# Database Configuration (Neon PostgreSQL - Development Branch)
DATABASE_URL="your-development-database-url"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-only-for-local-use"

# Authentication Settings
BYPASS_AUTH="true"  # Set to false to test authentication locally

# Application Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="FinFlow Tracker (Dev)"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
