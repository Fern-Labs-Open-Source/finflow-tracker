# FinFlow Tracker Environment Variables
# Copy this file to .env.local for local development
# DO NOT commit .env.local to version control

# Database Configuration
# For local development, use a local PostgreSQL instance
# For production, use Neon or another cloud provider
DATABASE_URL=postgresql://user:password@localhost:5432/finflow_dev

# NextAuth Configuration
# Generate a secure secret for production: openssl rand -base64 32
NEXTAUTH_SECRET=development-secret-change-in-production

# Set to your deployment URL
NEXTAUTH_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Authentication Bypass (Development Only)
# Set to 'true' to bypass authentication in development
# MUST be 'false' or unset in production
BYPASS_AUTH=false

# Optional: External Services
# Add any external API keys or service configurations here
# STRIPE_SECRET_KEY=
# SENDGRID_API_KEY=
# SENTRY_DSN=
